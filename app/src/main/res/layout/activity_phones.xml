<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhonesActivity">

    <LinearLayout
        android:id="@+id/productContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp"
        tools:ignore="ExtraText">

        <!-- Product 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/imageViewProduct1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_product_image"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewDescription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Pixel 8a 8GB RAM 128GB Processor: Google Tensor G3 Display: 6.1 inches Camera: Dual Camera Battery: Li-Po 4492 mAh 1 Year Warranty"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textViewPrice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From Rs.168,000.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/buttonAddToCart1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Product 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/imageViewProduct2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_product_image2"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewDescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Samsung Galaxy M14 4G 6GB RAM 128GB Processor:   Battery: Li-Po 5000 mAh 1 Year Warranty"

                android:textSize="16sp"
                android:layout_marginTop="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewPrice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs.58,857.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/buttonAddToCart2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:layout_marginTop="8dp" />
        </LinearLayout>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
